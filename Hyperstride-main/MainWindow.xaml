<Window x:Class="HyperStrideWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HyperStride"
        Width="800"
        Height="450"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        Focusable="True">

    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" 
                    ImageSource="Images/background.png" 
                    Stretch="Fill"/>
    </Window.Resources>

    <Grid>
        <Canvas x:Name="GameCanvas" Background="{StaticResource BackgroundBrush}"/>
        <Grid x:Name="MenuLayer"/>
    </Grid>

</Window>
